---
import { TypeById } from "src/utils/data-read";
import { capitalizeFirstLetter } from "src/utils/string";
import typeColorLightJson from "src/utils/color/type-color-light.json";
import typeColorJson from "src/utils/color/type-color.json";

const { class: className, type_id, formatter = capitalizeFirstLetter } = Astro.props;
---

<a
  class:list={[
    "flex items-center justify-center text-center no-underline rounded-md font-medium ring-[0.1em] ring-inset",
    className,
  ]}
  href=`/types/type/${type_id}`
  style=`background-color: ${typeColorLightJson[type_id]};
    color: ${typeColorJson[type_id]};
    --tw-ring-color: ${typeColorJson[type_id]}1A;`
>
  {formatter(TypeById[type_id].identifier)}
</a>
